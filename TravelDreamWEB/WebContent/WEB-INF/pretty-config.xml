<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	
	
	
	
	<url-mapping id="dettaglio">
		<pattern value="/store/details/#{id : frontendBean.idPacchetto}" />
		<view-id value="/store/details.xhtml" />
	</url-mapping>
	
	<url-mapping id="dettaglio-hotel">
		<pattern value="/store/hotel/details/#{id : frontendBean.idHotel}" />
		<view-id value="/store/detailsHotel.xhtml" />
	</url-mapping>
	
	<url-mapping id="book">
		<pattern value="/store/package/book" />
		<view-id value="/store/book.xhtml" />
	</url-mapping>
	
	<url-mapping id="list">
		<pattern value="/store/package/list" />
		<view-id value="/store/list.xhtml" />
	</url-mapping>
	
	<url-mapping id="list-hotel">
		<pattern value="/store/hotel/list" />
		<view-id value="/store/listHotel.xhtml" />
	</url-mapping>
	
	<url-mapping id="contatti">
		<pattern value="/store/contacts" />
		<view-id value="/store/contacts.xhtml" />
	</url-mapping>
	
	<url-mapping id="shared-detail">
		<pattern value="/invitation/#{id : shareBean.chiave}" />
		<view-id value="/store/detailsShare.xhtml" />
	</url-mapping>
	
	<url-mapping id="wishlist-view1">
		<pattern value="/out/viewlist" />
		<view-id value="/out/visualizzaLista.xhtml" />
	</url-mapping>
	
	<url-mapping id="profile">
		<pattern value="/store/profile" />
		<view-id value="/store/profile.xhtml" />
	</url-mapping>

</pretty-config>