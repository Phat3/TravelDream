<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>TravelDreamWEB</display-name>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>
  
 <!-- setto su che pagina effettuare il login e dove mi reindirizza la pagina di errore-->
 
  <login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/home.xhtml</form-login-page>
			<form-error-page>/loginError.xhtml</form-error-page>
		</form-login-config>
	</login-config>
	
<!-- admin security constraints (posso accedere solo al pattern /admin/* quando sono admin)-->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Admins Pages</web-resource-name>
			<description />
			<url-pattern>/admins/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
<!-- dipendente security constraints (posso accedere solo al pattern /dipendente/* quando sono dipendente)-->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Dipendente Pages</web-resource-name>
			<description />
			<url-pattern>/dipendente/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>dipendente</role-name>
		</auth-constraint>
	</security-constraint>
	
<!-- cliente security constraints (posso accedere solo al pattern /store/* quando sono cliente)-->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>cliente Pages</web-resource-name>
			<description />
			<url-pattern>/store/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>cliente</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<display-name>SSL transport required</display-name>
		<web-resource-collection>
			<web-resource-name>secure pages</web-resource-name>
			<description />
			<url-pattern>/home.xhtml</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<description />
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	
	<welcome-file-list>
		<welcome-file>home.xhtml</welcome-file>
	</welcome-file-list>
</web-app>